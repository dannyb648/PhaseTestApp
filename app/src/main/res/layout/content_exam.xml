<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/exam_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/exam_answer_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />

    <TextView
        android:id="@+id/exam_answer_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />

    <TextView
        android:id="@+id/exam_answer_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />

    <TextView
        android:id="@+id/exam_answer_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exam_button_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_button_a" />

        <Button
            android:id="@+id/exam_button_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_button_b" />

        <Button
            android:id="@+id/exam_button_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_button_c" />

        <Button
            android:id="@+id/exam_button_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_button_d" />

    </LinearLayout>


</LinearLayout>